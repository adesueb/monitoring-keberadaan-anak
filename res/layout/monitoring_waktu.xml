<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout 
    	android:id="@+id/linearLayout1" 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:gravity="center">
        <TextView 
        	android:layout_height="wrap_content" 
        	android:id="@+id/textView1" 
        	android:layout_width="wrap_content" android:textSize="25dip" android:text="@string/pilih_waktu">
        </TextView>
    </LinearLayout>
    <TimePicker 
    	android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/monitoringTime1">
    </TimePicker>
    <TimePicker 
    	android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/monitoringTime2">
    </TimePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <Button
            android:id="@+id/monitoringWaktuBtnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="30dip" />
    </LinearLayout>
    
</LinearLayout>
